<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smarttask.smarttaskmanager.controller.ProfileController">

    <left>
        <VBox spacing="15.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="SmartManager" textFill="WHITE">
                <font><Font name="System Bold" size="20.0"/></font>
            </Label>
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                <Button text="Dashboard" onAction="#goToDashboard" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>
                <Button text="My Tasks" onAction="#goToTasks" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>
                <Button text="Profile" maxWidth="Infinity" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>
            </VBox>
            <Button text="Logout" onAction="#handleLogout" maxWidth="Infinity" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #f8f9fa; -fx-border-color: transparent;">
            <content>
                <VBox spacing="30.0" style="-fx-background-color: #f8f9fa; -fx-padding: 40;" alignment="TOP_CENTER">

                    <VBox alignment="CENTER" spacing="10.0">
                        <StackPane>
                            <Circle fx:id="profileImage" radius="60.0" stroke="#bdc3c7" strokeWidth="2.0" fill="DODGERBLUE"/>
                            <Button text="ðŸ“·" onAction="#handleImportImage"
                                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 50; -fx-cursor: hand;"
                                    StackPane.alignment="BOTTOM_RIGHT" />
                        </StackPane>

                        <Label fx:id="lblHeaderName" text="Loading..." textFill="#2c3e50">
                            <font><Font name="System Bold" size="24.0"/></font>
                        </Label>
                        <Label fx:id="lblHeaderRole" text="..." textFill="#7f8c8d">
                            <font><Font size="14.0"/></font>
                        </Label>
                    </VBox>

                    <HBox spacing="15.0" alignment="CENTER">
                        <VBox alignment="CENTER_LEFT" spacing="5" prefWidth="180" style="-fx-background-color: linear-gradient(to right, #27ae60, #2ecc71); -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);">
                            <Label text="Tasks Done" textFill="WHITE" opacity="0.9"/>
                            <Label fx:id="lblStatDone" text="0" textFill="WHITE"><font><Font name="System Bold" size="24.0"/></font></Label>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="5" prefWidth="180" style="-fx-background-color: linear-gradient(to right, #f39c12, #f1c40f); -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);">
                            <Label text="Pending" textFill="WHITE" opacity="0.9"/>
                            <Label fx:id="lblStatPending" text="0" textFill="WHITE"><font><Font name="System Bold" size="24.0"/></font></Label>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="5" prefWidth="180" style="-fx-background-color: linear-gradient(to right, #2980b9, #3498db); -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);">
                            <Label text="Productivity" textFill="WHITE" opacity="0.9"/>
                            <Label fx:id="lblStatScore" text="0%" textFill="WHITE"><font><Font name="System Bold" size="24.0"/></font></Label>
                        </VBox>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 30; -fx-padding: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-max-width: 400;">
                        <Button fx:id="btnTabInfo" text="Personal Details" onAction="#switchForm" prefWidth="180"
                                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;"/>

                        <Button fx:id="btnTabSecurity" text="Security" onAction="#switchForm" prefWidth="180"
                                style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;"/>
                    </HBox>

                    <StackPane style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-max-width: 700;">

                        <VBox fx:id="infoBox" spacing="20.0" alignment="CENTER_LEFT">
                            <Label text="Edit Profile Information" textFill="#2c3e50"><font><Font name="System Bold" size="18.0"/></font></Label>

                            <VBox spacing="5">
                                <Label text="Username" textFill="#7f8c8d"/>
                                <TextField fx:id="usernameField" style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ecf0f1;"/>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="Email Address" textFill="#7f8c8d"/>
                                <TextField fx:id="emailField" editable="false" style="-fx-padding: 10; -fx-background-radius: 5; -fx-background-color: #f8f9fa; -fx-border-color: #ecf0f1;"/>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="Bio / Role" textFill="#7f8c8d"/>
                                <TextArea fx:id="bioField" prefHeight="80.0" wrapText="true" style="-fx-background-radius: 5; -fx-border-color: #ecf0f1;"/>
                            </VBox>

                            <Button text="Save Changes" onAction="#saveInfo" maxWidth="Infinity"
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-size: 14px;"/>
                        </VBox>

                        <VBox fx:id="securityBox" spacing="20.0" alignment="CENTER_LEFT" visible="false">
                            <Label text="Security Settings" textFill="#c0392b"><font><Font name="System Bold" size="18.0"/></font></Label>

                            <VBox spacing="5">
                                <Label text="Current Password" textFill="#7f8c8d"/>
                                <PasswordField fx:id="currentPasswordField" style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ecf0f1;"/>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="New Password" textFill="#7f8c8d"/>
                                <PasswordField fx:id="newPasswordField" style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ecf0f1;"/>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="Confirm New Password" textFill="#7f8c8d"/>
                                <PasswordField fx:id="confirmPasswordField" style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ecf0f1;"/>
                            </VBox>

                            <Button text="Update Password" onAction="#updatePassword" maxWidth="Infinity"
                                    style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-size: 14px;"/>
                        </VBox>

                    </StackPane>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>