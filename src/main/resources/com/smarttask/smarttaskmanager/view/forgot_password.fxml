<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="650.0" prefWidth="450.0"
           style="-fx-background-color: linear-gradient(to bottom, #fbc2eb 0%, #a6c1ee 100%);"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.smarttask.smarttaskmanager.controller.ForgotPasswordController">

    <VBox alignment="CENTER" maxWidth="350" spacing="20.0"
          style="-fx-background-color: white; -fx-background-radius: 30; -fx-padding: 30;">

        <effect>
            <DropShadow radius="20.0" offsetY="10.0" color="rgba(0,0,0,0.1)"/>
        </effect>

        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/logo.png"/>
            </image>
            <VBox.margin>
                <javafx.geometry.Insets bottom="10.0"/>
            </VBox.margin>
        </ImageView>

        <Label text="Reset Password" textFill="#2d3436">
            <font>
                <Font name="Segoe UI Bold" size="22.0"/>
            </font>
        </Label>

        <Label fx:id="messageLabel" textFill="#e74c3c" wrapText="true" alignment="CENTER" style="-fx-font-size: 12px;"/>

        <VBox fx:id="step1Box" spacing="15" alignment="CENTER" maxWidth="Infinity">
            <Label text="Enter your email to receive a code" textFill="#b2bec3" style="-fx-font-size: 13px;"/>

            <TextField fx:id="emailField" promptText="Enter your email"
                       style="-fx-background-color: white; -fx-border-color: #dfe6e9; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 12; -fx-font-size: 14px; -fx-text-fill: #2d3436;"/>

            <Button text="SEND CODE" onAction="#handleSendCode" defaultButton="true" maxWidth="Infinity"
                    style="-fx-background-color: linear-gradient(to right, #fbc2eb, #a6c1ee); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30; -fx-cursor: hand; -fx-padding: 12;"/>
        </VBox>

        <VBox fx:id="step2Box" spacing="15" alignment="CENTER" visible="false" managed="false" maxWidth="Infinity">
            <Label text="Enter the code sent to your email" textFill="#b2bec3" style="-fx-font-size: 13px;"/>

            <TextField fx:id="codeField" promptText="Verification Code"
                       style="-fx-background-color: white; -fx-border-color: #dfe6e9; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 12; -fx-font-size: 14px; -fx-text-fill: #2d3436;"/>

            <Button text="VERIFY CODE" onAction="#handleVerifyCode" defaultButton="true" maxWidth="Infinity"
                    style="-fx-background-color: linear-gradient(to right, #fbc2eb, #a6c1ee); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30; -fx-cursor: hand; -fx-padding: 12;"/>
        </VBox>

        <VBox fx:id="step3Box" spacing="15" alignment="CENTER" visible="false" managed="false" maxWidth="Infinity">
            <Label text="Enter your new password" textFill="#b2bec3" style="-fx-font-size: 13px;"/>

            <PasswordField fx:id="newPassField" promptText="New Password"
                           style="-fx-background-color: white; -fx-border-color: #dfe6e9; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 12; -fx-font-size: 14px; -fx-text-fill: #2d3436;"/>

            <Button text="RESET PASSWORD" onAction="#handleResetPassword" defaultButton="true" maxWidth="Infinity"
                    style="-fx-background-color: linear-gradient(to right, #fbc2eb, #a6c1ee); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30; -fx-cursor: hand; -fx-padding: 12;"/>
        </VBox>

        <Button text="Back to Login" onAction="#handleBack"
                style="-fx-background-color: transparent; -fx-text-fill: #b2bec3; -fx-font-size: 13px; -fx-cursor: hand; -fx-underline: true;"/>

    </VBox>
</StackPane>