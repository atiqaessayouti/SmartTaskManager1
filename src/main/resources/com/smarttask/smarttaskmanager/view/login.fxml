<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="650.0" prefWidth="450.0"
           style="-fx-background-color: linear-gradient(to bottom, #fbc2eb 0%, #a6c1ee 100%);"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.smarttask.smarttaskmanager.controller.LoginController">

    <VBox alignment="CENTER" maxWidth="350" spacing="20.0"
          style="-fx-background-color: white; -fx-background-radius: 30; -fx-padding: 30;">

        <effect>
            <DropShadow radius="20.0" offsetY="10.0" color="rgba(0,0,0,0.1)"/>
        </effect>

        <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/logo.png"/>
            </image>
        </ImageView>

        <Label text="Smart Task Manager" textFill="#2d3436">
            <font>
                <Font name="Segoe UI Bold" size="24.0"/>
            </font>
        </Label>

        <Label text="Welcome Back!" textFill="#b2bec3" style="-fx-padding: 0 0 10 0;">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <VBox spacing="15">
            <TextField fx:id="emailField" promptText="Email Address"
                       style="-fx-background-color: white; -fx-border-color: #dfe6e9; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 12; -fx-font-size: 14px; -fx-text-fill: #2d3436;"/>

            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-background-color: white; -fx-border-color: #dfe6e9; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 12; -fx-font-size: 14px; -fx-text-fill: #2d3436;"/>
        </VBox>

        <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword" alignment="CENTER_RIGHT" maxWidth="Infinity"
                   style="-fx-text-fill: #636e72; -fx-font-size: 12px; -fx-border-color: transparent;"/>

        <Button text="LOG IN" onAction="#handleLogin" defaultButton="true" maxWidth="Infinity"
                style="-fx-background-color: linear-gradient(to right, #fbc2eb, #a6c1ee); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30; -fx-cursor: hand; -fx-padding: 12; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="10.0" color="rgba(166, 193, 238, 0.5)" offsetY="5"/>
            </effect>
        </Button>

        <Hyperlink text="Don't have an account? Sign up" onAction="#handleGoToRegister"
                   style="-fx-text-fill: #2d3436; -fx-font-size: 13px; -fx-border-color: transparent; -fx-font-weight: bold;"/>

    </VBox>

</StackPane>