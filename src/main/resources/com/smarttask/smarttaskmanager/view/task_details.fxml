<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white;" prefWidth="400" prefHeight="500" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smarttask.smarttaskmanager.controller.TaskDetailsController">

    <Label text="Task Details" textFill="#2c3e50"><font><Font name="System Bold" size="18.0"/></font></Label>

    <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
        <Label fx:id="lblTitle" text="Titre de la tâche" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
        <Label fx:id="lblDesc" text="Description..." wrapText="true"/>
        <Label fx:id="lblStatus" text="Status: In Progress" textFill="#7f8c8d"/>
    </VBox>

    <Label text="Partager avec (Email):" style="-fx-font-weight: bold;"/>
    <HBox spacing="10">
        <TextField fx:id="txtShareEmail" promptText="ami@email.com" HBox.hgrow="ALWAYS"/>
        <Button text="Share" onAction="#handleShare" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
    </HBox>

    <Label text="Commentaires / Chat" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>

    <ListView fx:id="listComments" VBox.vgrow="ALWAYS" style="-fx-background-color: #f8f9fa;"/>

    <HBox spacing="10">
        <TextArea fx:id="txtComment" promptText="Écrire un commentaire..." prefHeight="40" wrapText="true" HBox.hgrow="ALWAYS"/>
        <Button text="Send" onAction="#handleAddComment" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

</VBox>