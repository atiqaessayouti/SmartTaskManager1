<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="700.0" prefWidth="1000.0"
           style="-fx-background-color: linear-gradient(to bottom, #fbc2eb 0%, #a6c1ee 100%);"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.smarttask.smarttaskmanager.controller.LoginController">

    <VBox alignment="CENTER" maxWidth="400" spacing="25.0"
          style="-fx-background-color: white; -fx-background-radius: 30; -fx-padding: 40;">

        <effect>
            <DropShadow radius="25.0" offsetY="15.0" color="rgba(0,0,0,0.1)"/>
        </effect>

        <ImageView fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/logo.png"/>
            </image>
        </ImageView>

        <VBox alignment="CENTER" spacing="5">
            <Label text="Smart Task Manager" textFill="#2d3436">
                <font><Font name="Segoe UI Bold" size="26.0"/></font>
            </Label>
            <Label text="Welcome Back!" textFill="#b2bec3">
                <font><Font size="15.0"/></font>
            </Label>
        </VBox>

        <VBox spacing="15">
            <TextField fx:id="emailField" promptText="Email Address"
                       style="-fx-background-color: #f8f9fa; -fx-border-color: #dfe6e9; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 12 20; -fx-font-size: 14px; -fx-text-fill: #2d3436;"/>

            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-background-color: #f8f9fa; -fx-border-color: #dfe6e9; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 12 20; -fx-font-size: 14px; -fx-text-fill: #2d3436;"/>
        </VBox>

        <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword" alignment="CENTER_RIGHT" maxWidth="Infinity"
                   style="-fx-text-fill: #a6c1ee; -fx-font-size: 12px; -fx-border-color: transparent; -fx-font-weight: bold;"/>

        <Button text="LOG IN" onAction="#handleLogin" defaultButton="true" maxWidth="Infinity"
                style="-fx-background-color: linear-gradient(to right, #fbc2eb, #a6c1ee); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30; -fx-cursor: hand; -fx-padding: 14; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="12.0" color="rgba(166, 193, 238, 0.4)" offsetY="5"/>
            </effect>
        </Button>

        <Hyperlink text="Don't have an account? Sign up" onAction="#handleGoToRegister"
                   style="-fx-text-fill: #a6c1ee; -fx-font-size: 13px; -fx-border-color: transparent; -fx-font-weight: bold;"/>

    </VBox>

</StackPane>