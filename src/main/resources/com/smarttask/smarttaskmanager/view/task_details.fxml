      fx:controller="com.smarttask.smarttaskmanager.controller.TaskDetailsController"
      style="-fx-padding: 25; -fx-background-color: white; -fx-pref-width: 480px; -fx-background-radius: 15; -fx-border-color: #f1f2f6; -fx-border-radius: 15; -fx-border-width: 1;">

