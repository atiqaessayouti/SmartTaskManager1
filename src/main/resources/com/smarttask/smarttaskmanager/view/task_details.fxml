                        style="-fx-background-color: linear-gradient(to right, #00dbde, #fc00ff); -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 20; -fx-padding: 8 20;">
                    <effect><DropShadow color="rgba(0,0,0,0.1)" radius="5" offsetY="2"/></effect>
