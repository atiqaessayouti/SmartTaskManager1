<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="400.0" spacing="15.0"
      style="-fx-background-color: #f4f7f6; -fx-background-radius: 15;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smarttask.smarttaskmanager.controller.ChatbotController">

    <children>
        <VBox alignment="CENTER" prefHeight="60.0" prefWidth="400.0" style="-fx-background-color: #512da8; -fx-background-radius: 15 15 0 0;">
            <children>
                <Label text="AI Productivity Assistant" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <TextArea fx:id="chatArea" editable="false" prefHeight="350.0" prefWidth="370.0"
                  wrapText="true" style="-fx-control-inner-background: #ffffff; -fx-font-size: 14px; -fx-background-radius: 10; -fx-border-color: #ddd; -fx-border-radius: 10;">
            <VBox.margin>
                <Insets left="15.0" right="15.0" />
            </VBox.margin>
        </TextArea>

        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" spacing="10.0">
            <children>
                <TextField fx:id="chatInput" onAction="#handleSendMessage" prefHeight="40.0" prefWidth="280.0"
                           promptText="Type your question here..."
                           style="-fx-background-radius: 20; -fx-padding: 0 15 0 15; -fx-border-color: #512da8; -fx-border-radius: 20;" />

                <Button mnemonicParsing="false" onAction="#handleSendMessage" prefHeight="40.0" prefWidth="70.0"
                        style="-fx-background-color: #512da8; -fx-background-radius: 20; -fx-cursor: hand;"
                        text="Send" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" />
            </padding>
        </HBox>
    </children>
</VBox>